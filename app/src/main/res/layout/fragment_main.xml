<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue"
    android:padding="16dp"
    tools:context=".ui.MainFragment">

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_temp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_by_feeling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/by_feeling"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_temp_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temt_min"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_by_feeling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_temp_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp_max"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp_min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>